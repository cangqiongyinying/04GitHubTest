<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/simple_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/simple_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/simple_item_image"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/simple_item_giftType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simple_item_title"
        android:layout_alignLeft="@id/simple_item_title"
        android:textColor="#d5d5d5"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/simple_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/simple_item_title"
        android:layout_below="@id/simple_item_giftType"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/simple_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/simple_item_count"
        android:layout_below="@id/simple_item_giftType"
        android:layout_marginLeft="20dp"
        android:textSize="16sp" />

    <Button
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:background="#36c77b"
        android:text="立即领取"
        android:layout_alignTop="@+id/simple_item_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>